.searchContainer{
    padding: 0 20rpx;
}

.header{
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
    padding: 10rpx 0;
}
.searchInput{
    flex: 1;
    background:rgba(237,237,237,0.3);
    border-radius: 30rpx;
    position: relative;
    display: flex;
    padding-left: 5rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.searchInput .searchIcon{
    margin-right: 10rpx;
}

.searchInput input{
    display: block;
    margin:auto 0;
}

.placeHolder{
   font-size: 28rpx;
}

.cancel{
    width: 100rpx;
    text-align: center;
}

/*热搜榜*/
.hotContainer{
    margin-top: 30rpx;
}

.hotContainer .title{
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #eee;
}

.hotContainer .hotList{
    display: flex;
    flex-wrap: wrap;
}

.hotContainer .hotItem{
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;

}

.hotItem .order{
    margin: 0 10rpx;
}

.hotItem .iconImag{
    width: 30rpx;
    height: 25rpx;
    margin-left: 10rpx;
}

/*搜索内容展示*/
.searchContent{
    color: rgba(107,100, 238, 0.96);
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    border-bottom: 1rpx solid #aaa;
}
.searchItem{
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}
.searchItem .content{
    flex: 1;
    margin-left: 20rpx;
    border-bottom: 1rpx solid #eee;
    font-size: 26rpx;
}


/*搜索历史*/
.history{
    display: flex;
    flex-wrap: wrap;
    margin: 20rpx 0;
    position: relative;
}
.history .title{
    font-size: 28rpx;
    height: 50rpx;
}
.history .historyItem{
    font-size: 26rpx;
    height: 50rpx;
    background-color: #ededed;
    margin-left: 20rpx;
    padding: 0 30rpx;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
}
.history .delete{
    position: absolute;
    bottom: 10rpx;
    right: 15rpx;
    font-size: 36rpx;
}
