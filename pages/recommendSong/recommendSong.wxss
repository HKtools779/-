/* pages/recommendSong/recommendSong.wxss */
.recommendSongContainer .header{
    height: 300rpx;
    width: 100%;
}
.recommendSongContainer .header image{
    width: 100%;
    height: 100%;
}

.listContainer{
    padding: 0 20rpx;
    border-radius: 30rpx;
    background-color: #fff;
    position: relative;
    top: -20rpx;
}
.listHeader{
    height: 80rpx;
    line-height: 80rpx;
}
.recommendSongContainer .listContainer .listHeader .changeMore{
    float: right;
}
/*内容区*/
.listScroll{
    height: calc(100vh - 380rpx);
}
.scrollItem{
    display: flex;
    position: relative;
}
.scrollItem image{
    width: 120rpx;
    height: 120rpx;
    border-radius: 8rpx;
    margin-bottom: 20rpx;
}
.musicInfo{
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;

    max-width: 375rpx;
}

.musicInfo text{
    height:60rpx;
    line-height: 60rpx;
    font-size: 30rpx;

    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.scrollItem .iconfont{
    position: absolute;
    width: 100rpx;
    height: 100rpx;
    line-height: 120rpx;
    right: 0;
    text-align: center;
}

